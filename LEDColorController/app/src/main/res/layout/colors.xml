<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/curColor"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:layout_margin="20dp"
        android:maxHeight="100dp"
        android:minHeight="100dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blue"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/green"
        android:layout_alignStart="@+id/green"
        android:layout_marginTop="83dp"
        android:progress="50" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/green"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/red"
        android:layout_alignStart="@+id/red"
        android:layout_marginTop="81dp"
        android:progress="50" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/red"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/curColor"
        android:layout_alignStart="@+id/curColor"
        android:layout_marginTop="50dp"
        android:progressTint="#ff0000"
        android:progress="50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/rText"
        android:layout_below="@+id/red"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/gText"
        android:layout_below="@+id/green"
        android:layout_alignEnd="@+id/green"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/bText"
        android:layout_below="@+id/blue"
        android:layout_alignStart="@+id/gText"
        android:layout_marginRight="20dp" />
</RelativeLayout>